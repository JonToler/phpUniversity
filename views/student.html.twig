<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Student Course List</title>
  </head>
  <body>
    <h1>Student Page</h1>
    <h2>{{ student.getStudentName }}</h2>
    {% for course in studentCourses %}
    <p>{{ course.getCourseName }}</p>
    {% endfor %}
    <form action="/student/addCourse" method="post">
      <input name = 'studentId' type='hidden' value='{{ student.getId }}'>
      <select name='course'>
          {% for course in courses %}
          <option value='{{ course.getId }}'>{{ course.getCourseName }}</option>
          {% endfor %}
      </select>
      <button type='submit'>Add Course</button>
    </form>

  </body>
</html>
